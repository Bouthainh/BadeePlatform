@model BadeePlatform.DTOs.LoginParentDTO
@{
    ViewData["Title"] = "ماهر - تسجيل الدخول";
    Layout = null;
}

<body>
    <div class="login-container">
        <div class="login-left">
            <div class="login-illustration">
                <img src="~/images/MaherLogo.png" alt="MaherLogo">
            </div>
        </div>
        <div class="login-right">
            <h1>مرحبا بعودتك إلى ماهر</h1>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }

            @if (ViewData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">@ViewData["ErrorMessage"]</div>
            }

            <form method="POST" asp-controller="Parent" asp-action="Login">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <input asp-for="UsernameOrEmail"
                           type="text"
                           placeholder="اسم المستخدم أو بريدك هنا"
                           required />
                    <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Password"
                           type="password"
                           placeholder="أدخل كلمة المرور هنا"
                           required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="forgot-password">
                    <a href="#">نسيت كلمة المرور؟</a>
                </div>

                <button type="submit" class="login-button">سجل دخول</button>
            </form>

            <div class="signup-link">
                <p>
                    ليس لديك حساب؟
                    <a asp-controller="Parent" asp-action="Register">أنشئ الآن</a>
                </p>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>